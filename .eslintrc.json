{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:prettier/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "overrides": [],
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            // Allows for the parsing of JSX
            "jsx": true
        }
    },
    "ignorePatterns": [
        "node_modules",
        "coverage",
        "build",
        "dist",
        ".DS_Store",
        ".env.local",
        ".env.development.local",
        ".env.test.local",
        ".env.production.local",
        ".vscode/",
        "package-lock.json",
        "yarn.lock",
        "docusaurus.config.js"
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}